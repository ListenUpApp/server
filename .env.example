# ListenUp Server Configuration
# Copy this file to .env and customize for your environment.
# All values shown are defaults unless otherwise noted.

# =============================================================================
# Core Settings
# =============================================================================

# Environment: development, staging, or production
ENV=development

# Log level: debug, info, warn, or error
LOG_LEVEL=info

# =============================================================================
# Storage Paths
# =============================================================================

# Base path for metadata storage (database, covers, cache)
# Supports ~ for home directory
METADATA_PATH=~/ListenUp/metadata

# Path to your audiobook library
# Supports ~ for home directory
AUDIOBOOK_PATH=~/Audiobooks

# =============================================================================
# Server Settings
# =============================================================================

# Display name for the server (shown in client apps)
SERVER_NAME=ListenUp Server

# Server port
SERVER_PORT=8080

# Optional: Internal URL for local network access
# SERVER_LOCAL_URL=http://192.168.1.100:8080

# Optional: External URL for remote access (e.g., through reverse proxy)
# SERVER_REMOTE_URL=https://audiobooks.example.com

# HTTP timeouts
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# Advertise server via mDNS/Zeroconf for automatic discovery
ADVERTISE_MDNS=true

# =============================================================================
# Authentication
# =============================================================================

# Token lifetimes (Go duration format: 15m, 1h, 720h, etc.)
ACCESS_TOKEN_DURATION=15m
REFRESH_TOKEN_DURATION=720h

# =============================================================================
# Transcoding
# =============================================================================

# Enable audio transcoding (converts formats for client compatibility)
TRANSCODE_ENABLED=true

# Path for transcode cache (defaults to {METADATA_PATH}/cache/transcode)
# TRANSCODE_CACHE_PATH=~/ListenUp/metadata/cache/transcode

# Maximum concurrent transcode jobs
TRANSCODE_MAX_CONCURRENT=2

# Path to ffmpeg binary (leave empty for auto-detection)
# FFMPEG_PATH=/usr/local/bin/ffmpeg

# =============================================================================
# Metadata Providers
# =============================================================================

# Default Audible region for metadata lookups
# Valid: us, uk, de, fr, au, ca, jp, it, in, es
AUDIBLE_DEFAULT_REGION=us
